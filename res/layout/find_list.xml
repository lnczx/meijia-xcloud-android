<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <include
        android:id="@+id/view_to_fra_title_bar"
        layout="@layout/find__to_fra_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_to_fra_title_bar"
        android:background="@color/activity_bg_color" >

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cut_off_rule" />

        <RelativeLayout
            android:id="@+id/rl_tab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/simi_color_white" >

            <com.meijialife.simi.ui.SyncHorizontalScrollView
                android:id="@+id/mHsv"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:background="@color/simi_color_white"
                 >

                <RelativeLayout
                    android:id="@+id/rl_nav"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/simi_color_white"
                     >

                    <RadioGroup
                        android:id="@+id/rg_nav_content"
                        android:layout_width="fill_parent"
                        android:layout_height="38dip"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal"
                        android:background="@color/simi_color_white"
                         >
                    </RadioGroup>

                    <ImageView
                        android:id="@+id/iv_nav_indicator"
                        android:layout_width="1dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:scaleType="matrix" />
                </RelativeLayout>
            </com.meijialife.simi.ui.SyncHorizontalScrollView>

            <ImageView
                android:id="@+id/iv_nav_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="1dip"
                android:src="@drawable/iv_navagation_scroll_left"
                android:visibility="gone" >
            </ImageView>

            <ImageView
                android:id="@+id/iv_nav_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="1dip"
                android:src="@drawable/iv_navagation_scroll_right"
                android:visibility="visible" >
            </ImageView>
        </RelativeLayout>

        <View
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent" />

        <ListView
            android:id="@+id/find_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="42dp"
            android:layout_weight="1.0"
            android:divider="@color/cut_off_rule"
            android:dividerHeight="0.5dp" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>